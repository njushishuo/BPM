<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AddRequirementActivity">

    <RelativeLayout
        android:id="@+id/tab_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/transparent">
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/tab_text_grey"
            android:layout_alignParentBottom="true"/>
        <TextView
            android:id="@+id/txt_top"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            android:textColor="@color/tab_text_grey"
            android:text="添加需求" />
    </RelativeLayout>

    <!--<Button-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="50dp"-->
        <!--android:text="添加"-->
        <!--android:textSize="18sp"-->
        <!--android:id="@+id/add_xuqiu_button"-->
        <!--android:layout_alignParentBottom="true"/>-->
    <com.beardedhen.androidbootstrap.BootstrapButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="添加"
        app:bootstrapBrand="success"
        app:bootstrapSize="lg"
        app:buttonMode="regular"
        app:showOutline="false"
        app:roundedCorners="true"
        android:id="@+id/add_xuqiu_button"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="2dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tab_title"
        android:layout_above="@id/add_xuqiu_button">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="项目名称"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:textSize="18sp"/>
                <EditText
                    android:layout_width="240dp"
                    android:layout_height="28dp"
                    android:layout_marginVertical="5dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/edit_bg"
                    android:id="@+id/project_name"
                    android:gravity="start"
                    android:textSize="15sp"/>
                <!--<com.github.florent37.materialtextfield.MaterialTextField-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--app:mtf_labelColor="#666"-->
                    <!--app:mtf_image="@drawable/save"-->
                    <!--android:layout_marginHorizontal="10dp">-->

                    <!--<EditText-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:hint="项目名称"-->
                        <!--android:textColor="#333"-->
                        <!--android:textSize="15sp"-->
                        <!--android:id="@+id/project_name"/>-->

                <!--</com.github.florent37.materialtextfield.MaterialTextField>-->
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="项目类型"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:textSize="18sp"/>
                <Spinner
                    android:layout_width="240dp"
                    android:layout_height="35dp"
                    android:layout_marginVertical="5dp"
                    android:layout_marginHorizontal="20dp"
                    android:id="@+id/project_type"
                    android:gravity="center"
                    >
                </Spinner>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="项目描述"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="18sp"/>
                <TextView
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@color/transparent" />

            </LinearLayout>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="2dp"
                android:lines="5"
                android:background="@drawable/edit_bg"
                android:gravity="start"
                android:textSize="15sp"
                android:id="@+id/project_descrip"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="试卷模板"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:textSize="18sp"/>
                <TextView
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@color/transparent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/add_paper_template"
                    android:orientation="vertical">
                </LinearLayout>
                <!--<ImageButton-->
                    <!--android:layout_width="32dp"-->
                    <!--android:layout_height="32dp"-->
                    <!--android:src="@drawable/plus2"-->
                    <!--android:layout_gravity="center"-->
                    <!--android:background="@color/transparent"-->
                    <!--android:layout_marginBottom="10dp"-->
                    <!--android:id="@+id/add_template_button"/>-->
                <FrameLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <at.markushi.ui.CircleButton
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:src="@drawable/add_1"
                        app:cb_color="#99CC00"
                        app:cb_pressedRingWidth="8dip"
                        android:id="@+id/add_template_button"
                        android:layout_gravity="center"/>

                </FrameLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="试卷描述"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginVertical="5dp"
                        android:layout_weight="10"
                        android:background="@color/transparent" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="2dp"
                        android:lines="4"
                        android:background="@drawable/edit_bg"
                        android:gravity="start"
                        android:textSize="15sp"
                        android:id="@+id/paper_descrip"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>